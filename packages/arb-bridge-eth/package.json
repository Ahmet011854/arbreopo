{
  "name": "arb-bridge-eth",
  "version": "0.0.1",
  "license": "Apache-2.0",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ fredlacs/arb-bridge-eth",

    "prepare:mainnet": "yarn workspace subgraph-common mustache $(pwd)/../subgraph-common/config/mainnet.json $(pwd)/subgraph.template.yaml > subgraph.yaml",
    "prepare:rinkeby": "yarn workspace subgraph-common mustache $(pwd)/../subgraph-common/config/rinkeby.json $(pwd)/subgraph.template.yaml > subgraph.yaml",

    "deploy:rinkeby": "yarn prepare:mainnet && graph deploy --node https://api.thegraph.com/deploy/ fredlacs/arb-bridge-eth-rinkeby",
    "deploy:mainnet": "yarn prepare:rinkeby && graph deploy --node https://api.thegraph.com/deploy/ fredlacs/arb-bridge-eth"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.22.0-alpha.2",
    "@graphprotocol/graph-ts": "0.22.0-alpha.2"
  }
}
